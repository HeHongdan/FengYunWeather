<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout style="@style/HomeCard">

        <TextView
            android:id="@+id/tv_today_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="@string/today_title"
            android:textColor="@color/color_212121"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_day"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp" />

                <TextView
                    android:id="@+id/tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_day"
                    android:gravity="center"
                    android:text="@string/max_tmp"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_max_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/tv_max"
                    android:gravity="center"
                    android:text="21°"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_night"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_night"
                    android:gravity="center"
                    android:text="@string/min_tmp"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_min_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/tv_min"
                    android:gravity="center"
                    android:text="5°"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_rain"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:src="@mipmap/icon_rainfall"
                    android:tint="#4A4A4A" />

                <TextView
                    android:id="@+id/tv_rain"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_rain"
                    android:gravity="center"
                    android:text="@string/rainfall"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_today_rain"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/tv_rain"
                    android:gravity="center"
                    android:text="0.5mm"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_hum"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@mipmap/icon_hum"
                    android:tint="#4A4A4A" />

                <TextView
                    android:id="@+id/tv_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_hum"
                    android:gravity="center"
                    android:text="@string/hum"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_today_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/tv_hum"
                    android:gravity="center"
                    android:text="20%"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_pressure"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:src="@mipmap/icon_pressure"
                    android:tint="#4A4A4A" />

                <TextView
                    android:id="@+id/tv_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_pressure"
                    android:gravity="center"
                    android:text="@string/pressure"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_today_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/tv_pressure"
                    android:gravity="center"
                    android:text="1001HPA"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_today_visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@mipmap/icon_visible"
                    android:tint="#4A4A4A" />

                <TextView
                    android:id="@+id/tv_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_today_visible"
                    android:gravity="center"
                    android:text="@string/visible"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_today_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/tv_visible"
                    android:gravity="center"
                    android:text="14KM"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/iv_today_wind"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="35dp"
                android:src="@mipmap/icon_wind"
                android:tint="#4A4A4A" />

            <TextView
                android:id="@+id/tv_wind_dir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/iv_today_wind"
                android:gravity="center"
                android:text="东北风"
                android:textColor="@color/color_a4a4a4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wind_sc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tv_wind_dir"
                android:gravity="center"
                android:text="2级"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>


</merge>